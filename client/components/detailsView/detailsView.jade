#details-view.well
  .row(ng-show='currentItem')
    .col-md-8
      div(editable-text='currentItem.name', onaftersave='update()') {{currentItem.name}}
      div(editable-text='currentItem.weight', onaftersave='update()') {{currentItem.weight}}
      div(editable-text='currentItem.category', onaftersave='update()') {{currentItem.category}}
    .col-md-3.pull-right
      .row
        #item-image.well.well-lg
          div(ng-hide='currentItem.imagePath === ""')
            img(ng-src='{{currentItem.imagePath}}')
          #image-upload(ng-hide='currentItem.imagePath !== ""')
            .row
              button.btn.btn-primary(ngf-select, ngf-change='onFileSelect($files)', accept='image/*') Select image
            .row
              .drop-box(ngf-drop, ng-model='files', ngf-drag-over-class='dragover',
              ngf-accept="'image/*'", ngf-change='fileDropped($files, $event, $rejectedFiles)'
              ) Drop image file
